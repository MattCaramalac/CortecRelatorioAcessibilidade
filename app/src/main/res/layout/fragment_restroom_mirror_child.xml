<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ChildFragments.RestroomMirrorChildFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/mirror_image"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:contentDescription="@string/label_sup_bar_measurements"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/expand_mirror_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/expand_mirror_img"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/mirror_image"
            app:layout_constraintBottom_toBottomOf="@id/mirror_image"
            app:layout_constraintStart_toEndOf="@id/mirror_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/usual_padding"
            android:layout_marginStart="@dimen/usual_padding"
            android:textSize="@dimen/section_header"
            android:textAlignment="center"
            android:text="@string/label_expand_image_info"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mirror_A_measurement_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/usual_padding"
            android:layout_marginEnd="@dimen/usual_padding"
            app:layout_constraintTop_toBottomOf="@id/mirror_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/mirror_B_measurement_field"
            android:layout_marginTop="@dimen/top_margins"
            android:hint="@string/hint_measurement_A">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mirror_A_measurement_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mirror_B_measurement_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/usual_padding"
            android:layout_marginEnd="@dimen/usual_padding"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/mirror_A_measurement_field"
            app:layout_constraintStart_toEndOf="@id/mirror_A_measurement_field"
            android:hint="@string/hint_measurement_B">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mirror_B_measurement_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mirror_obs_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margins"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mirror_A_measurement_field"
            android:hint="@string/hint_sink_measures_obs">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mirror_obs_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical"
                android:gravity="start"
                android:scrollHorizontally="false"
                android:lines="@integer/multiline_obs_field"/>

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>