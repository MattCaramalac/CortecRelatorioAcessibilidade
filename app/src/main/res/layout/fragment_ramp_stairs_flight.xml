<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.RampStairsFlightFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/flight_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/section_header"/>

        <TextView
            android:id="@+id/flight_number_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/flight_header"
            android:layout_marginTop="@dimen/top_margins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/section_header"
            android:text="@string/header_flight_number_indicator"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/flight_number"
            app:layout_constraintStart_toEndOf="@id/flight_number_header"
            app:layout_constraintBaseline_toBaselineOf="@id/flight_number_header"
            android:layout_marginTop="@dimen/top_margins"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/usual_padding"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ramp_staircase_width_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/flight_number_header"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/usual_padding">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ramp_staircase_width_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/dimensions_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ramp_staircase_width_field"
            android:layout_marginTop="@dimen/top_margins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/section_header"/>

        <Button
            android:id="@+id/mirror_button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dimensions_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/step_button"
            android:layout_marginTop="@dimen/usual_padding"
            android:backgroundTint="@color/purple_200"
            android:text="@string/label_mirror_register_text"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <Button
            android:id="@+id/step_button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/mirror_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/mirror_button"
            android:layout_marginTop="@dimen/usual_padding"
            android:backgroundTint="@color/purple_200"
            android:text="@string/label_step_register_text"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <Button
            android:id="@+id/inclination_button"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dimensions_header"
            android:layout_marginTop="@dimen/usual_padding"
            android:backgroundTint="@color/purple_200"
            android:text="@string/label_inclination_button"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tactile_sign_pavement_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dimensions_header"
            android:layout_marginTop="72dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_pavement_tactile_sign_header"
            android:textSize="@dimen/section_header"/>

        <RadioGroup
            android:id="@+id/pavement_tactile_sign_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tactile_sign_pavement_header"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:text="@string/radio_button_no"
                android:textSize="15sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:text="@string/radio_button_yes"
                android:textSize="15sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:text="@string/radio_button_not_applicable"
                android:textSize="15sp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/tactile_sign_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty_fields"
            android:textSize="14sp"
            android:textColor="@color/error_message"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/pavement_tactile_sign_radio"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pavement_tact_sign_obs_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tactile_sign_error"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/usual_padding"
            android:hint="@string/hint_pavement_tact_sign_obs">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pavement_tact_sign_obs_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tactile_floor_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pavement_tact_sign_obs_field"
            android:layout_marginTop="@dimen/top_margins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_tactile_floor_header"
            android:textSize="@dimen/section_header"/>

        <RadioGroup
            android:id="@+id/tactile_floor_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tactile_floor_header"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:text="@string/radio_button_no"
                android:textSize="15sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:text="@string/radio_button_yes"
                android:textSize="15sp"/>

        </RadioGroup>

        <TextView
            android:id="@+id/tactile_floor_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty_fields"
            android:textSize="14sp"
            android:textColor="@color/error_message"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tactile_floor_radio"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tactile_floor_obs_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tactile_floor_error"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/usual_padding"
            android:hint="@string/hint_tactile_floor_obs">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tactile_floor_obs_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/railing_beacon_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tactile_floor_obs_field"
            android:layout_marginTop="@dimen/top_margins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_railing_beacon_register_header"
            android:textSize="@dimen/section_header"/>

        <Button
            android:id="@+id/railing_beacon_button"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/railing_beacon_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/usual_padding"
            android:layout_marginStart="@dimen/top_margins"
            android:backgroundTint="@color/purple_200"
            android:text="@string/label_button_railing"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/handrail_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/railing_beacon_button"
            android:layout_marginTop="@dimen/top_margins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_handrail_header"
            android:textSize="@dimen/section_header"/>

        <Button
            android:id="@+id/handrail_button"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/handrail_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/usual_padding"
            android:layout_marginStart="@dimen/top_margins"
            android:backgroundTint="@color/purple_200"
            android:text="@string/label_button_handrails"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/border_sign_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/handrail_button"
            android:layout_marginTop="@dimen/top_margins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_border_sign_header"
            android:textSize="@dimen/section_header"
            android:visibility="gone"/>

        <RadioGroup
            android:id="@+id/border_sign_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/border_sign_header"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:text="@string/radio_button_no"
                android:textSize="15sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:text="@string/radio_button_yes"
                android:textSize="15sp"/>

        </RadioGroup>

        <TextView
            android:id="@+id/border_sign_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty_fields"
            android:textSize="14sp"
            android:textColor="@color/error_message"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/border_sign_radio"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/border_signal_width_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/border_sign_error"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/usual_padding"
            android:hint="@string/hint_border_sign_width"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/border_signal_width_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/border_sign_identifiable_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margins"
            android:text="@string/label_border_sign_identifiable_header"
            android:textSize="@dimen/section_header"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/border_signal_width_field" />

        <RadioGroup
            android:id="@+id/border_sign_identifiable_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/border_sign_identifiable_header"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:text="@string/radio_button_no"
                android:textSize="15sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:text="@string/radio_button_yes"
                android:textSize="15sp"/>

        </RadioGroup>

        <TextView
            android:id="@+id/border_sign_identifiable_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty_fields"
            android:textColor="@color/error_message"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/border_sign_identifiable_radio" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/border_signal_obs_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/border_sign_identifiable_error"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/usual_padding"
            android:hint="@string/hint_border_sign_obs"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/border_signal_obs_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_flight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top_margins"
            android:text="@string/label_button_save"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/border_signal_obs_field" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_flight"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top_margins"
            android:text="@string/label_button_cancel"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/save_flight"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>