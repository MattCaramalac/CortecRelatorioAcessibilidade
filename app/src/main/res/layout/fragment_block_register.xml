<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.BlockRegisterFragment">

    <TextView
        android:id="@+id/block_identifier_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/header_block_space_register"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_new_block_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:text="@string/new_block_button"
        android:textColor="@color/black"
        style="bol"
        app:layout_constraintTop_toTopOf="@id/add_new_space_button"
        app:layout_constraintBottom_toBottomOf="@id/add_new_space_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/add_new_space_button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_new_space_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:text="@string/new_space_button"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/block_identifier_header"
        app:layout_constraintStart_toEndOf="@id/add_new_block_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/top_margins"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_quit_block_register"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/label_save_quit_button"
        app:layout_constraintTop_toBottomOf="@id/add_new_space_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/top_margins"/>


</androidx.constraintlayout.widget.ConstraintLayout>