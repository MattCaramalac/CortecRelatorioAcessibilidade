<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InspectionActivity"
    android:paddingStart="4dp"
    android:paddingEnd="4dp">

    <FrameLayout
        android:id="@+id/chooseItemMemorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.23"
        />

    <FrameLayout
        android:id="@+id/show_fragment_selected"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/chooseItemMemorial"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/usual_padding"/>

    <!--    TODO - Retirar para colocar no MainActivity depois, quando o envio for feito daquela tela -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_indicator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:indeterminate="true"
        app:trackCornerRadius="@dimen/usual_padding"
        android:visibility="gone"/>
