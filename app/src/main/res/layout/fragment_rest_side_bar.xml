<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ChildFragments.RestSideBarFragment">

    <TextView
        android:id="@+id/side_bar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/usual_padding"
        android:text="O sanitário possui barra reta lateral fixa?"
        android:textSize="@dimen/section_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/side_bar_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/side_bar_header">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/weight_one"
            android:text="@string/radio_button_no"
            android:textSize="@dimen/radio_button_text" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/weight_one"
            android:text="@string/radio_button_yes"
            android:textSize="@dimen/radio_button_text" />
    </RadioGroup>

    <TextView
        android:id="@+id/side_bar_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty_fields"
        android:textColor="@color/error_message"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/side_bar_radio" />

    <ImageButton
        android:id="@+id/side_bar_img"
        android:layout_width="@dimen/square_image_100"
        android:layout_height="@dimen/square_image_100"
        android:layout_marginTop="@dimen/top_margins"
        android:contentDescription="Barra Reta Lateral Fixa"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/side_bar_measureD_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/side_bar_error" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/side_bar_measureD_field"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_measurement_D"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/side_bar_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/side_bar_img"
        app:layout_constraintTop_toTopOf="@id/side_bar_img">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/side_bar_measureD_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/side_bar_measureE_field"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/usual_padding"
        android:hint="@string/hint_measurement_E"
        android:visibility="gone"
        android:weightSum="@integer/weight_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/side_bar_img">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/side_bar_measureE_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/side_bar_dist_img"
        android:layout_width="@dimen/square_image_100"
        android:layout_height="@dimen/square_image_100"
        android:layout_marginTop="@dimen/top_margins"
        android:contentDescription="Barra Reta Lateral Fixa"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/side_bar_measureG_field"
        app:layout_constraintTop_toBottomOf="@id/side_bar_measureE_field" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/side_bar_measureG_field"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_measurement_G"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/side_bar_dist_img"
        app:layout_constraintEnd_toStartOf="@id/side_bar_dist_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/side_bar_dist_img">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/side_bar_measureG_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/side_bar_section_field"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/usual_padding"
        android:hint="@string/hint_trans_section_bar"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/side_bar_dist_img">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/side_bar_section_value"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/art_bar_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/usual_padding"
        android:text="O sanitário possui barra lateral articulada?"
        android:textSize="@dimen/section_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/side_bar_section_field" />

    <RadioGroup
        android:id="@+id/art_bar_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/art_bar_header">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/weight_one"
            android:text="@string/radio_button_no"
            android:textSize="@dimen/radio_button_text" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/weight_one"
            android:text="@string/radio_button_yes"
            android:textSize="@dimen/radio_button_text" />
    </RadioGroup>

    <TextView
        android:id="@+id/art_bar_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty_fields"
        android:textColor="@color/error_message"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/art_bar_radio" />

    <ImageButton
        android:id="@+id/art_bar_img1"
        android:layout_width="@dimen/square_image_100"
        android:layout_height="@dimen/square_image_100"
        android:layout_marginTop="@dimen/top_margins"
        android:contentDescription="Barra Reta Lateral Articulada"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/art_bar_measureH_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/art_bar_error" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/art_bar_measureH_field"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_measurement_H"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/art_bar_img1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/art_bar_img1"
        app:layout_constraintTop_toTopOf="@id/art_bar_img1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/art_bar_measureH_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/art_bar_measureI_field"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/usual_padding"
        android:hint="@string/hint_measurement_I"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/art_bar_img1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/art_bar_measureI_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/art_bar_img2"
        android:layout_width="@dimen/square_image_100"
        android:layout_height="@dimen/square_image_100"
        android:layout_marginTop="@dimen/top_margins"
        android:contentDescription="Barra Reta Lateral Articulada 2"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/art_bar_measureJ_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/art_bar_measureI_field" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/art_bar_measureJ_field"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_measurement_J"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/art_bar_img2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/art_bar_img2"
        app:layout_constraintTop_toTopOf="@id/art_bar_img2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/art_bar_measureJ_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/art_bar_section_field"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/usual_padding"
        android:hint="@string/hint_trans_section_bar"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/art_bar_img2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/art_bar_section_value"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>