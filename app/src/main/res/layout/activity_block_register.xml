<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BlockRegisterActivity"
    android:padding="@dimen/usual_padding">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/createBlockRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.30"
        class="com.mpms.relatorioacessibilidadecortec.fragments.ParentFragments.BlockRegisterFragment"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/show_block_spaces_registered"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.68
"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createBlockRegister"
        android:layout_marginTop="@dimen/usual_padding"/>

</androidx.constraintlayout.widget.ConstraintLayout>