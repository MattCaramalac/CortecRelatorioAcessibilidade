<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RestroomSupportBarFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rest_support_bar_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/label_support_bar_header"
            android:textSize="@dimen/section_header"/>

        <ImageButton
            android:id="@+id/rest_support_bar_image"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/top_margins"
            android:contentDescription="@string/label_sup_bar_measurements"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rest_support_bar_header" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@id/rest_support_bar_image"
            app:layout_constraintBottom_toBottomOf="@id/rest_support_bar_image"
            app:layout_constraintStart_toEndOf="@id/rest_support_bar_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/usual_padding"
            android:layout_marginStart="@dimen/usual_padding"
            android:textSize="@dimen/section_header"
            android:textAlignment="center"
            android:text="Clique na imagem ao lado para ampliá-la"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sup_bar_diam_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rest_support_bar_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/top_margins"
            android:hint="@string/hint_sup_bar_diameter">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sup_bar_diam__value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sup_bar_A_measurement_field"
            android:layout_width="@dimen/dimen_field"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sup_bar_diam_field"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sup_bar_B_measurement_field"
            android:layout_marginTop="@dimen/top_margins"
            android:hint="@string/hint_measurement_A">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sup_bar_A_measurement_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sup_bar_B_measurement_field"
            android:layout_width="@dimen/dimen_field"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/sup_bar_A_measurement_field"
            app:layout_constraintStart_toEndOf="@id/sup_bar_A_measurement_field"
            android:hint="@string/hint_measurement_B">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sup_bar_B_measurement_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sup_bar_C_measurement_field"
            android:layout_width="@dimen/dimen_field"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sup_bar_A_measurement_field"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sup_bar_D_measurement_field"
            android:layout_marginTop="@dimen/top_margins"
            android:hint="@string/hint_measurement_C">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sup_bar_C_measurement_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sup_bar_D_measurement_field"
            android:layout_width="@dimen/dimen_field"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/sup_bar_C_measurement_field"
            app:layout_constraintBaseline_toBaselineOf="@id/sup_bar_C_measurement_field"
            android:hint="@string/hint_measurement_D">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sup_bar_D_measurement_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sup_bar_E_measurement_field"
            android:layout_width="@dimen/dimen_field"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sup_bar_C_measurement_field"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sup_bar_F_measurement_field"
            android:layout_marginTop="@dimen/top_margins"
            android:hint="@string/hint_measurement_E">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sup_bar_E_measurement_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sup_bar_F_measurement_field"
            android:layout_width="@dimen/dimen_field"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/sup_bar_E_measurement_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/sup_bar_E_measurement_field"
            android:hint="@string/hint_measurement_F">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sup_bar_F_measurement_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sup_bar_G_measurement_field"
            android:layout_width="@dimen/dimen_field"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sup_bar_E_measurement_field"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sup_bar_H_measurement_field"
            android:layout_marginTop="@dimen/top_margins"
            android:hint="@string/hint_measurement_G">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sup_bar_G_measurement_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sup_bar_H_measurement_field"
            android:layout_width="@dimen/dimen_field"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/sup_bar_G_measurement_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/sup_bar_G_measurement_field"
            android:hint="@string/hint_measurement_H">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sup_bar_H_measurement_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sup_bar_I_measurement_field"
            android:layout_width="@dimen/dimen_field"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sup_bar_G_measurement_field"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sup_bar_J_measurement_field"
            android:layout_marginTop="@dimen/top_margins"
            android:hint="@string/hint_measurement_I">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sup_bar_I_measurement_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sup_bar_J_measurement_field"
            android:layout_width="@dimen/dimen_field"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/sup_bar_I_measurement_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/sup_bar_I_measurement_field"
            android:hint="@string/hint_measurement_J">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sup_bar_J_measurement_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sup_bar_obs_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margins"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sup_bar_I_measurement_field"
            android:hint="@string/hint_sup_bar_obs">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sup_bar_obs_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical"
                android:gravity="start"
                android:scrollHorizontally="false"
                android:lines="@integer/multiline_obs_field"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/toilet_height_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sup_bar_obs_field"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/top_margins"
            android:hint="@string/hint_toilet_height">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/toilet_height_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/toilet_flush_height_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toilet_height_field"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/top_margins"
            android:hint="@string/hint_toilet_flush_height">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/toilet_flush_height_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/paper_holder_type_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toilet_flush_height_field"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/top_margins"
            android:text="@string/label_paper_holder_type"
            android:textSize="@dimen/section_header"/>

        <RadioGroup
            android:id="@+id/paper_holder_type_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/paper_holder_type_header"
            app:layout_constraintEnd_toStartOf="parent"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:text="@string/radio_built_in_paper_holder"
                android:textSize="@dimen/radio_button_text"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:text="@string/radio_overlap_paper_holder"
                android:textSize="@dimen/radio_button_text"/>

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/paper_holder_distance_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/paper_holder_type_radio"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/top_margins"
            android:hint="Distância entre papeleira e vaso sanitário">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/paper_holder_distance_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/paper_holder_height_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/paper_holder_distance_field"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/top_margins"
            android:hint="Altura da Papeleira">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/paper_holder_height_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/paper_holder_obs_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margins"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/paper_holder_height_field"
            android:hint="Observações sobre a papeleira">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/paper_holder_obs_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical"
                android:gravity="start"
                android:scrollHorizontally="false"
                android:lines="@integer/multiline_obs_field"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/emergency_signal_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/paper_holder_obs_field"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/top_margins"
            android:text="@string/label_emergency_signal_header"
            android:textSize="@dimen/section_header"/>

        <RadioGroup
            android:id="@+id/emergency_signal_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/emergency_signal_header"
            app:layout_constraintEnd_toStartOf="parent"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:text="@string/radio_button_no"
                android:textSize="@dimen/radio_button_text"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:text="@string/radio_button_yes"
                android:textSize="@dimen/radio_button_text"/>

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emergency_signal_height_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/emergency_signal_radio"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/top_margins"
            android:hint="Altura do dispositivo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emergency_signal_height_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emergency_signal_obs_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margins"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emergency_signal_height_field"
            android:hint="Observações sobre a papeleira">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emergency_signal_obs_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical"
                android:gravity="start"
                android:scrollHorizontally="false"
                android:lines="@integer/multiline_obs_field"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/bidet_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/emergency_signal_obs_field"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/top_margins"
            android:text="@string/label_bidet_header"
            android:textSize="@dimen/section_header"/>

        <RadioGroup
            android:id="@+id/bidet_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bidet_header"
            app:layout_constraintEnd_toStartOf="parent"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:text="@string/radio_button_no"
                android:textSize="@dimen/radio_button_text"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:text="@string/radio_button_yes"
                android:textSize="@dimen/radio_button_text"/>

        </RadioGroup>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bidet_obs_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margins"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bidet_radio"
            android:hint="Observações sobre a papeleira">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/bidet_obs_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical"
                android:gravity="start"
                android:scrollHorizontally="false"
                android:lines="@integer/multiline_obs_field"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_sup_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top_margins"
            android:text="@string/label_button_proceed_register"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bidet_obs_field" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/return_up_view"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top_margins"
            android:text="@string/label_back_button"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/save_sup_bar"
            app:layout_constraintStart_toStartOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>