<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/block_register_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/usual_padding"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/block_identifier_header"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/header_block_space_register"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_and_quit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/block_identifier_header"
        android:layout_marginTop="45dp"
        android:layout_centerInParent="true"
        app:icon="@drawable/ic_baseline_save_50"
        android:text="@string/label_save_quit_button"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_external_areas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_below="@id/save_and_quit"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/purple_200"
        app:icon="@drawable/ic_baseline_nature_people_100"
        app:iconTint="@color/dark_grey"
        android:text="@string/button_label_ext_area"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="35sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_blocks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_below="@id/add_external_areas"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/purple_200"
        app:icon="@drawable/ic_baseline_school_100"
        app:iconTint="@color/dark_grey"
        android:text="@string/button_label_block"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="35sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_support_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_below="@id/add_blocks"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/purple_200"
        app:icon="@drawable/ic_playground_svgrepo_com"
        app:iconTint="@color/dark_grey"
        android:text="@string/button_label_sup_area"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="35sp"/>



</RelativeLayout>