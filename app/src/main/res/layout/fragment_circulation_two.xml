                <TextView
                    android:id="@+id/label_fall_protect_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_margins"
                    android:text="Cadastro de Proteções contra Queda"
                    android:textSize="@dimen/section_header"
                    android:layout_below="@id/circ_add_equip_button"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/circ_add_fall_protect_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/usual_padding"
                    android:backgroundTint="@color/purple_200"
                    android:text="@string/label_add_frag_entry"
                    android:textColor="@color/black"
                    app:cornerRadius="3dp"
                    android:layout_below="@id/label_fall_protect_register"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/top_margins"/>

                <TextView
                    android:id="@+id/circ_fall_protect_counter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/circ_add_fall_protect_button"
                    android:layout_toEndOf="@id/circ_add_fall_protect_button"
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/top_margins"
                    android:text="(0)"
                    android:textSize="@dimen/section_header_big" />

